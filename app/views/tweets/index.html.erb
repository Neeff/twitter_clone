<p id="notice"><%= notice %></p>

<h1>Tweets</h1>
<div class="row">

<div class="col col-md 9">





    <% @tweets.each do |tweet| %>
    <div class="card text-white bg-success mb-3" style="max-width: 35rem;">
      <div class="card-header"><%=tweet.id %></div>
      <div class="card-body">
        <h5 class="card-title"><%= tweet.title%></h5>
        <p class="card-text"><%= tweet.content %></p>
        <%= link_to 'Show', tweet,class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_tweet_path(tweet) , class: 'btn btn-warning' %>
        <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
      </div>



    <% end %>

</div>
<div class="col col-md 3">
<%= render 'form', tweet: @tweet %>
</div>
</div>
